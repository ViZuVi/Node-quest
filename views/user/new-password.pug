extends ../layouts/main-layout.pug

block content
  main.page-main
    h1.page-content__title Enter new password
    form.login-form(action="/new-password", method="post")
      div.login-form__input-wrapper
        label.login-form__label password
        input.login-form__input(type="password" name="password")
        input(type="hidden", name="_csrf" value=csrfToken)
        input(type="hidden", name="userId" value=userId)
        input(type="hidden", name="passwordToken" value=passwordToken)
      button.login-form__submit-btn(type="submit") Submit