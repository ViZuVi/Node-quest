extends ../layouts/main-layout.pug

block content
  main.page-main
    h1.page-content__title Login
    form.login-form(action="/login", method="post")
      div.login-form__input-wrapper
        label.login-form__label username
        input.login-form__input(type="text" name="login")
      div.login-form__input-wrapper
        label.login-form__label password
        input.login-form__input(type="password" name="password")
      button.login-form__submit-btn(type="submit") Submit